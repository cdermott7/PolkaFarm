{
  "name": "polkafarm",
  "version": "1.0.0",
  "description": "DeFi yield farming on Polkadot Asset Hub",
  "main": "index.js",
  "scripts": {
    "test": "hardhat test",
    "test:unit": "hardhat test test/unit/*",
    "coverage": "hardhat coverage",
