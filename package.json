    "defi",
    "yield-farming",
    "solidity"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@openzeppelin/contracts": "^4.9.3",
    "hardhat": "^2.17.1",
    "solhint": "^3.4.1"
  },
  "dependencies": {
    "ethers": "^6.13.7"
  }
}
